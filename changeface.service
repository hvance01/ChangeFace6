[Unit]
Description=ChangeFace3 Streamlit Application
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/ChangeFace
Environment="PATH=/root/ChangeFace/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="VIRTUAL_ENV=/root/ChangeFace/venv"
ExecStart=/root/ChangeFace/venv/bin/streamlit run app.py --server.address=0.0.0.0 --server.port=80
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
